{
	"domready":true,
	"tpl":"-catalog/search.tpl",
	"nocache":true,
	"jsontpl":"-showcase/api/search?val=&m={~encode(Crumb.get.m)}&p={Crumb.get.p}",
	"seojsontpl":"-showcase/api/search/seo?seo={Controller.names.catalog.crumb}&val=&m={~encode(Crumb.get.m)}",
	"autoedittpl":{ "fast":"{~conf.showcase.folders}"},
	"showanimate":true,
	"name":"catalog",
	"child":{
		"tpl":"-catalog/search.tpl",
		"jsontpl":"-showcase/api/search?val={~encode(crumb.name)}&m={~encode(Crumb.get.m)}&p={Crumb.get.p}",
		"seojsontpl":"-showcase/api/search/seo?val={~encode(crumb.name)}&seo={Controller.names.catalog.crumb}&m={~encode(Crumb.get.m)}",
		"redirecttpl":"{data.is=:producer?:p}{data.is=:group?:g}{p:}{:com}{data.title:s}{g:}{:com}{data.group.group_nick:s}{s:}/{.}{com:}/{crumb.parent}",
		"child":{
			"tpl":"-catalog/position.tpl",
			"redirecttpl":"{data.pos?:red}{red:}/{crumb.parent.parent}/{data.pos.producer_nick}/{data.pos.article_nick}{data.pos.item_num!:1?data.pos.item_num:s}{s:}/{.}",
			"jsontpl":"-showcase/api/pos/{crumb.parent.name}/{crumb.name}/{crumb.child.name}?m={~encode(Crumb.get.m)}",
			"seojsontpl":"-showcase/api/pos/seo/{crumb.parent.name}/{crumb.name}/{crumb.child.name}?seo={Controller.names.catalog.crumb}&m={~encode(Crumb.get.m)}"
		}
	},
	"childs":{
		"find":{
			"jsontpl":"-catalog/find.php",
			"seojsontpl":"-catalog/find.php?seo={Controller.names.catalog.crumb}",
			"tpl":"-catalog/find.tpl",
			"autosavename":"catalog"
		},
		"producers":{
			"tpl":"-catalog/producers.tpl",
			"jsontpl":"-showcase/api/producers?lim=0,200&m={~encode(Crumb.get.m)}",
			"seojsontpl":"-showcase/api/producers/seo?seo={Controller.names.catalog.crumb}",
			"autoedittpl":{ "fast":"{~conf.showcase.texts}Производители"}
		},
		"stat":{
			"tpl":"-catalog/stat.tpl",
			"json":"-catalog/stat.php",
			"seojsontpl":"-catalog/stat.php?seo={Controller.names.catalog.crumb}",
			"autoedittpl":{ "fast":"{~conf.showcase.texts}Статистика поиска по каталогу"}
		}
	}
}
